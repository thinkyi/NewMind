@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>登录 - 管理后台</title>
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <link href="~/Content/themes/redmond/jquery-ui-1.10.3.custom.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/styles/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jqueryui/redmond/jquery-ui-1.10.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/account-index.js" type="text/javascript"></script>
</head>
<body>
    <div id="loginBox">
        <div class="boxLeft">
            <p class="title">
                <img src="~/Content/Images/logo2.png" alt="" />
                <span class="bigText">
                    管理后台
                </span>
                <span class="smallText">
                    东莞新创印刷制品有限公司
                </span>
            </p>
        </div>
        <div class="boxCenter">
            <img src="@Url.Content("~/Content/Images/split.png")" width="8" height="181" alt="" />
        </div>
        <div class="boxRight">
            <div class="inputBox">
                <p style="float: left; width: 80px; text-align: right; line-height: 28px; height: 28px;
                    padding: 0px 15px 0px 0px; margin: 0px; font-size:14px;">
                    用户名:
                </p>
                <input type="text" name="txtUsername" id="UserName" class="form-element ui-widget-content ui-corner-all" />
            </div>
            <div class="inputBox">
                <p style="float: left; width: 80px; text-align: right; line-height: 28px; height: 28px; padding: 0px 15px 0px 0px; margin: 0px; font-size: 14px; ">
                    密码:
                </p>
                <input type="password" name="txtPassword" id="Password" class="form-element ui-widget-content ui-corner-all" />
            </div>
            <button id="btnSignin" type="button" style="margin:10px 0px 0px 95px;">
                登 录
            </button>
        </div>
    </div>
</body>
</html>
