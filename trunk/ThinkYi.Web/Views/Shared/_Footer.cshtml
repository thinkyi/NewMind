@using ThinkYi.Web.Models
@model PartialFooter
<div id="footer">
    <div class="links">
        @{
            int count = Model.Menus.Count;
            for (int i = 0; i < count; i++)
            {
                <a href="@Url.Action("Index", Model.Menus[i].Code, new { language = ViewContext.RouteData.Values["language"] })">@Model.Menus[i].Name</a>
                if (i < count - 1)
                {
                    <span>|</span>
                }
            }
        }
    </div>
    <div class="copyright">
        @Html.Raw(Model.Footer)
        <script language="JavaScript" src=http://float2006.tq.cn/floatcard?adminid =9612386&sort =0></script><script type="text/javascript" src="http://js.tongji.linezing.com/3472973/tongji.js"></script><noscript><a href="http://www.linezing.com"><img src="http://img.tongji.linezing.com/3472973/tongji.gif" /></a></noscript>
    </div>
</div>