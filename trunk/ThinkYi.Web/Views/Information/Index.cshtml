@using ThinkYi.Domain
@model ThinkYi.Web.Models.InformationIndex
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    Post post = Model.Post;
    List<Information> informations = Model.Informations;

    int next = Model.Curr + 1;
    int pre = Model.Curr - 1;
    int last = Model.Total % 14 == 0 ? Model.Total / 14 : Model.Total / 14 + 1;
}

@section javascript{
    <script src="@Url.Content("~/Scripts/product-information.js")" type="text/javascript"></script>
}
<input type="hidden" id="lCode" value="@ViewContext.RouteData.Values["language"]" />
<input type="hidden" id="Total" value="@Model.Total" />
<input type="hidden" id="Next" value="@Model.Next" />
<input type="hidden" id="Pre" value="@Model.Pre" />
@section banner{
    <div class="banner1">
        <img src="@post.BannerPic" alt="@post.Code" width="995" height="204">
    </div>
}
<div class="rightbar">
    <div class="neibox">
        <div class="top">
            <h3>@ViewBag.LongCaption</h3>
        </div>
        <div class="mid">
            <div class="navbox" style="background:url(@post.TitlePic) no-repeat left center;">
                <b>
                    @ViewBag.ShortCaption
                    <br />
                </b>
                <b class="c_hui">
                    @ViewBag.Remark
                </b>
            </div>
            <div class="newsbox" style="min-height:445px;">
                <ul>
                    @foreach (Information info in informations)
                    {
                        <li><span class="date">【@info.Date.ToString()】</span><a href="@Url.Action("Detail", new { id = info.InformationID })">@info.Name</a> </li>
                    }
                </ul>
            </div>
            <div style="clear:both;"></div>
            <div class="pagebox">
                【<a href="@Url.Action("Index", "Information", new { language = ViewContext.RouteData.Values["language"], PageIndex = 1 })" id="gotoFirst">@Model.FirstText</a>】
                【<a href="@Url.Action("Index", "Information", new { language = ViewContext.RouteData.Values["language"], PageIndex = pre })" id="gotoPre">@Model.PreText</a>】
                【<a href="@Url.Action("Index", "Information", new { language = ViewContext.RouteData.Values["language"], PageIndex = next })" id="gotoNext">@Model.NextText</a>】
                【<a href="@Url.Action("Index", "Information", new { language = ViewContext.RouteData.Values["language"], PageIndex = last })" id="gotoLast">@Model.LastText</a>】
            </div>
        </div>
        <div class="di"></div>
    </div>
</div>
