@model List<ThinkYi.Domain.Message>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/styles/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
</head>
<body>
    <div id="container">
        @{
            Html.RenderAction("_Header", "Partial", new { lCode = ViewContext.RouteData.Values["language"] });
        }
        <div id="main">
            @foreach (var msg in Model)
            {
                <div>留言内容：@msg.Text</div>
                <div>回复内容：@msg.Reply</div>
                <hr />
            }
            <form action="@Url.Action("Add")" method="post">
                <textarea name="text" style="width:500px;height:100px;"></textarea>
                <button type="submit">提交</button>
            </form>
        </div>
        @{
            Html.RenderAction("_Footer", "Partial", new { lCode = ViewContext.RouteData.Values["language"] });
        }
    </div>
</body>
</html>

