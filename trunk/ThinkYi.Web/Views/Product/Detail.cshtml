@using ThinkYi.Domain
@using ThinkYi.Web.Models
@model ProductDetail
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    Post post = Model.Post;
    Product product = Model.Product;
}
@section javascript{
    <script src="@Url.Content("~/Scripts/product-detail.js")" type="text/javascript"></script>
}
@section banner{
    <div class="banner1">
        <img src="@post.BannerPic" alt="@post.Code" width="995" height="204">
    </div>
}
<input type="hidden" id="ProductTypeID" value="@product.ProductTypeID" />
<input type="hidden" id="ParentTypeID" value="@product.ProductType.ParentTypeID" />
<div class="rightbar">
    <div class="neibox">
        <div class="top">
            <h3>@ViewBag.LongCaption</h3>
        </div>
        <div class="mid">
            <div class="navbox" style="background:url(@post.TitlePic) no-repeat left center;">
                <b>
                    @ViewBag.ShortCaption
                    <br />
                </b>
                <b class="c_hui">
                    @ViewBag.Remark
                </b>
            </div>
            <div class="neicontent">
                @Html.Raw(product.Text)
            </div>
        </div>
        <div class="di"></div>
    </div>
</div>
