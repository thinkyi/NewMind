@model ThinkYi.Domain.Information
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "InformationEdit";
}
@section javascript{
    <script src="@Url.Content("~/Scripts/admin-informationedit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.config.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.all.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/lang/zh-cn/zh-cn.js")" type="text/javascript"></script>
}
<div class="form" style="border-top:1px solid #a6c9e2; padding:8px 10px;">
    <div style="width:50%; float:left;">
        <ul>
            <li>
                <input type="hidden" id="InformationID" name="InformationID" value="@Model.InformationID" />
                <input type="hidden" id="LanguageID" name="LanguageID" value="@Model.LanguageID" />
                <label class="title" style="margin-top:0px;">编码</label>
                <input type="text" id="Code" name="Code" value="@Model.Code" class="text ui-widget-content ui-corner-all" style="width:80%" />
            </li>
            <li>
                <label class="title">名称</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" class="text ui-widget-content ui-corner-all" style="width: 80%" />
            </li>
            <li>
                <label class="title">日期</label>
                <input type="text" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" class="text ui-widget-content ui-corner-all" style="width: 80%" />
            </li>
        </ul>
    </div>
    <div style="clear:both;"></div>
    <div>
        <label class="title">内容</label>
        <label>
            <script id="Text" name="Text" type="text/plain" style="height:300px;">
                @Html.Raw(Model.Text)
            </script>
        </label>
    </div>
    <button style="position:fixed; top:10px; right:10px;" id="btnSave" type="button">
        保存
    </button>
</div>
