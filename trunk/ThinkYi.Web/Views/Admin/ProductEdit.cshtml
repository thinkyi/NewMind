@model ThinkYi.Domain.Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "ProductEdit";
}
@section javascript{
    <script src="@Url.Content("~/Scripts/admin-productedit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.config.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.all.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/lang/zh-cn/zh-cn.js")" type="text/javascript"></script>
}
<div class="form" style="border-top:1px solid #a6c9e2; padding:8px 10px;">
    <div style="width:50%; float:left;">
        <ul>
            <li>
                <label class="title" style="margin-top:0px;">产品编码</label>
                <input type="text" id="Code" name="Code" value="@Model.Code" class="text ui-widget-content ui-corner-all" style="width:80%" />
            </li>
            <li>
                <label class="title">产品名称</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" class="text ui-widget-content ui-corner-all" style="width: 80%" />
            </li>
            <li>
                <label class="title">产品类别</label>
                <select id="PType1" name="PType1" class="text ui-widget-content ui-corner-all" style="padding: 3px;"></select>
                <select id="PType2" name="PType2" class="text ui-widget-content ui-corner-all" style="padding: 3px;"></select>
            </li>
            <li>
                <label class="title">是否首页推荐</label>
                <label style="margin:0px; width:230px;">
                    <input type="checkbox" id="IsRecommend" name="IsRecommend" class="text ui-widget-content ui-corner-all" />
                    <span style="color:#808080;">勾选则在首页产品推荐处显示大图</span>
                </label>
            </li>
            <li class="liBigPic">
                <label class="title">上传产品大图</label>
                <input type="button" id="BigPic" name="BigPic" class="btnUpPic" value="选择推荐图片" />
                <span style="color:#808080;">图片尺寸(782*339)</span>
            </li>
            <li>
                <label class="title">是否首页展示</label>
                <label style="margin: 0px; width: 230px;">
                    <input type="checkbox" id="IsShow" name="IsShow" class="text ui-widget-content ui-corner-all" />
                    <span style="color: #808080; ">勾选则在首页产品展示处显示小图</span>
                </label>
            </li>
            <li class="liSmallPic">
                <label class="title">上传产品小图</label>
                <input type="button" id="SmallPic" name="SmallPic" class="btnUpPic" value="选择展示图片" />
                <span style="color:#808080;">图片尺寸(164*122)</span>
            </li>
            <li>
                <label class="title">是否添加<span class="spanLanguage"></span>版本</label>
                <label style="margin: 0px; width: 180px;">
                    <input type="checkbox" id="IsClone" name="IsClone" class="text ui-widget-content ui-corner-all" />
                    <span style="color: #808080; ">勾选则自动添加<span class="spanLanguage"></span>版本</span>
                </label>
            </li>
        </ul>
    </div>
    <div style="float:right; width:50%;">
        <ul>
            <li>
                <label class="title" style="margin-top:0px;">产品大图预览</label>
                <img id="BigPicPreview" src="~/Content/images/admin/temp.png" style="width:80%; max-height:220px;" />
            </li>
            <li>
                <label class="title">产品小图预览</label>
                <img id="SmallPicPreview" src="~/Content/images/admin/temp.png" style="width:25%; max-height:120px;" />
            </li>
        </ul>
    </div>
    <div style="clear:both;"></div>
    <div>
        <label class="title">产品内容</label>
        <label>
            <script id="Text" name="Text" type="text/plain" style="height:300px;">
            </script>
        </label>
    </div>
    <button style="position:fixed; top:10px; right:10px;" id="btnSave" type="button">
        保存
    </button>
</div>
<div style="display: none;" id="upPicEditor">
</div>
