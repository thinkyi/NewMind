@{
    ViewBag.Title = "Slide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section javascript{
    <script src="~/Scripts/json2.min.js"></script>
    <script src="@Url.Content("~/Scripts/admin-slide.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.config.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.all.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/lang/zh-cn/zh-cn.js")" type="text/javascript"></script>
}
<div class="form" style="border-top:1px solid #a6c9e2; padding:8px 10px;">
    @for (int i = 1; i <= 5; i++)
    {
        <div style="clear:both;"></div>
        <div style="width:100%; height:20px; border-bottom:1px solid #ccc; margin-top:10px;">@i</div>
        <div style="width:50%; float:left;">
            <ul>
                <li>
                    <label class="title">标题</label>
                    <input type="text" id="Title_@i" name="Title_@i" class="text ui-widget-content ui-corner-all" style="width: 90%" />
                </li>
                <li>
                    <label class="title">网址</label>
                    <input type="text" id="Url_@i" name="Url_@i" class="text ui-widget-content ui-corner-all" style="width: 90%" />
                </li>
                <li>
                    <label class="title">图片</label>
                    <input type="button" id="@i" class="btnUpPic" value="选择图片" />
                    <span style="color:#808080;">图片尺寸(996*204)</span>
                </li>
            </ul>
        </div>
        <div style="width:50%; float:right;">
            <ul>
                <li>
                    <label class="title">预览</label>
                    <img id="Preview_@i" src="~/Content/images/admin/temp.png" style="width:90%; max-height:140px;" />
                </li>
            </ul>
        </div>
    }
</div>
<button style="position:fixed; top:10px; right:10px;" id="btnSave" type="button">
    保存
</button>
<div style="display: none;" id="upPicEditor">
</div>