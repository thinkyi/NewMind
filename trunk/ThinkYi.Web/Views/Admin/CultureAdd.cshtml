@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CultureAdd";
}
@section javascript{
    <script src="@Url.Content("~/Scripts/admin-cultureadd.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.config.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.all.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/lang/zh-cn/zh-cn.js")" type="text/javascript"></script>
}
<div class="form" style="border-top:1px solid #a6c9e2; padding:8px 10px;">
    <div style="width:50%; float:left;">
        <ul>
            <li>
                <label class="title" style="margin-top:0px;">编码</label>
                <input type="text" id="Code" name="Code" class="text ui-widget-content ui-corner-all" style="width:80%" />
            </li>
            <li>
                <label class="title">上传小图</label>
                <input type="button" id="ic" name="Pic" class="btnUpPic" value="选择小图" />
                <span style="color:#808080;">图片尺寸(200*150)</span>
            </li>
            <li>
                <label class="title">概述</label>
                <textarea id="Describe" name="Describe" class="text ui-widget-content ui-corner-all" style="width:80%; height:200px;"></textarea>
            </li>
            <li>
                <label class="title">是否添加<span class="spanLanguage"></span>版本</label>
                <label style="margin: 0px; width: 180px;">
                    <input type="checkbox" id="IsClone" name="IsClone" class="text ui-widget-content ui-corner-all" />
                    <span style="color: #808080; ">勾选则自动添加<span class="spanLanguage"></span>版本</span>
                </label>
            </li>
        </ul>
    </div>
    <div style="float:right; width:50%;">
        <ul>
            <li>
                <label class="title">小图预览</label>
                <img id="PicPreview" src="~/Content/images/admin/temp.png" style="width:25%; max-height:120px;" />
            </li>
        </ul>
    </div>
    <div style="clear:both;"></div>
    <div>
        <label class="title">内容</label>
        <label>
            <script id="Text" name="Text" type="text/plain" style="height:300px;">
            </script>
        </label>
    </div>
    <button style="position:fixed; top:10px; right:10px;" id="btnSave" type="button">
        保存
    </button>
</div>
<div style="display: none;" id="upPicEditor">
</div>
