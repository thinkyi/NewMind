@model ThinkYi.Domain.Culture
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CultureEdit";
}
@section javascript{
    <script src="@Url.Content("~/Scripts/admin-cultureedit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.config.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/ueditor.all.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/UEditor/lang/zh-cn/zh-cn.js")" type="text/javascript"></script>
}
<div class="form" style="border-top:1px solid #a6c9e2; padding:8px 10px;">
    <div style="width:50%; float:left;">
        <ul>
            <li>
                <input type="hidden" id="CultureID" name="CultureID" value="@Model.CultureID" />
                <label class="title" style="margin-top:0px;">编码</label>
                <input type="text" id="Code" name="Code" value="@Model.Code" class="text ui-widget-content ui-corner-all" style="width:80%" />
            </li>
            <li>
                <label class="title" style="margin-top:0px;">标题</label>
                <input type="text" id="Name" name="Name" value="@Model.Name" class="text ui-widget-content ui-corner-all" style="width:80%" />
            </li>
            <li>
                <label class="title">上传小图</label>
                <input type="button" id="ic" name="Pic" class="btnUpPic" value="选择小图" />
                <span style="color:#808080;">图片尺寸(200*150)</span>
            </li>
            <li>
                <label class="title">概述</label>
                <textarea id="Describe" name="Describe" class="text ui-widget-content ui-corner-all" style="width:80%; height:200px;">@Model.Describe</textarea>
            </li>
        </ul>
    </div>
    <div style="float:right; width:50%;">
        <ul>
            <li>
                <label class="title">小图预览</label>
                <img id="PicPreview" src="@Model.Pic" style="width:25%; max-height:120px;" />
            </li>
        </ul>
    </div>
    <div style="clear:both;"></div>
    <div>
        <label class="title">内容</label>
        <label>
            <script id="Text" name="Text" type="text/plain" style="height:300px;">
                @Html.Raw(Model.Text)
            </script>
        </label>
    </div>
    <button style="position:fixed; top:10px; right:10px;" id="btnSave" type="button">
        保存
    </button>
</div>
<div style="display: none;" id="upPicEditor">
</div>
