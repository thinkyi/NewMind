                    </li>
                </ul>
            </div>
        </div>
    </div>
    @***********west end********************@
    @***********center start****************@
    <div class="ui-layout-center">
        <div style="border-bottom: 1px solid #79b7e7; background: #3682dd; color: white; height:30px; line-height: 30px; font-size: 13px; padding-left:10px; margin-bottom:2px;">
            <div style="float:left;">
                后台首页 > <span class="ribbon">语言设置</span>
            </div>
            <div class="language">
                @foreach (var l in Model)
                {
                    <a href="javascript:void(0);" name="@l.Code" title="@l.LanguageID">
                        @l.Name
                    </a>
                }
            </div>
        </div>
        <iframe id="mainFrame" name="mainFrame" class="ui-layout-content" width="100%" frameborder="0" scrolling="auto"
                src="@Url.Action("Nav",new {viewName="I18N"})"></iframe>
    </div>
    @***********center end***********@

    <div id="resetDialog" title="修改密码">
        <ul>
            <li>
                <label style="margin-top:0px;">请输入旧密码</label>
                <input type="password" id="OldPwd" name="OldPwd" class="text ui-widget-content ui-corner-all" style="width:80%; height:23px; padding-left:5px;" />
            </li>
            <li>
                <label>请输入新密码</label>
                <input type="password" id="NewPwd" name="NewPwd" class="text ui-widget-content ui-corner-all" style="width: 80%; height: 23px; padding-left: 5px;" />
            </li>
        </ul>
