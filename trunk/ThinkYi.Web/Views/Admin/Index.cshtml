            <h3>系统管理</h3>
            <div>
                <ul class="menuItem">
                    <li>
                        <div class="selected" view="I18N">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/bricks.png">
                                <span class="nav">语言设置</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div view="Post" code="footer">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/book_addresses.png">
                                <span class="nav">页脚设置</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div view="Banner" code="payment">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/bricks.png">
                                <span class="nav">在线支付横幅设置</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div view="TitlePic" code="payment">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/bricks.png">
                                <span class="nav">在线支付图标设置</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div view="Post" code="payment">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/book_addresses.png">
                                <span class="nav">在线支付内容管理</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
            <h3>关于新创</h3>
            <div>
                <ul class="menuItem">
                    <li>
                        <div view="Banner" code="about">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/bricks.png">
                                <span class="nav">横幅图片设置</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div view="TitlePic" code="about">
