@model List<ThinkYi.Domain.Language>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>新创网站管理后台</title>
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <link href="~/Content/themes/redmond/jquery-ui-1.10.3.custom.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Scripts/layout/css/layout-custom.css" rel="stylesheet" type="text/css" />
    <link href="~/Scripts/jqGrid/css/ui.jqgrid.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/styles/admin.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jqueryui/redmond/jquery-ui-1.10.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/layout/js/jquery.layout.min.js" type="text/javascript"></script>
    <script src="~/Scripts/admin-index.js" type="text/javascript"></script>
