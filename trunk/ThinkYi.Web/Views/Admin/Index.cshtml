                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/bricks.png">
                                <span class="nav">标题图标设置</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div view="Post" code="recuit">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/book_addresses.png">
                                <span class="nav">招聘信息内容</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
            <h3>联系我们</h3>
            <div>
                <ul class="menuItem">
                    <li>
                        <div view="Banner" code="contact">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/bricks.png">
                                <span class="nav">横幅图片设置</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <div view="TitlePic" code="contact">
                            <a href="javascript:void(0);">
                                <img src="~/Content/images/admin/bricks.png">
                                <span class="nav">标题图标设置</span>
                            </a>
